{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "max-len": [2, 120],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "space-in-parens": ["error", "never"],
        "keyword-spacing": ["error", {
            "before": true,
            "after": true
        }]
    }
}
